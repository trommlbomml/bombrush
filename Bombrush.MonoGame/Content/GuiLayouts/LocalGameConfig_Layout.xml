<?xml version="1.0" encoding="utf-8" ?>
<Frame Title="Local Game Setup">
  <StackPanel Orientation="Vertical">
    <Grid Margin="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
    
      <TextBlock Grid.Row="0" Grid.Column="0" Text="Number of Players" Margin="5" />

      <Button Grid.Row="0" Grid.Column="1" Id="DecreasePlayerCountButton">
        <TextBlock Text="-" />
      </Button>
      <TextBlock Grid.Row="0" Grid.Column="2" Id="PlayerCountText" Text="1" Width="30" HorizontalAlignment="Center" />
      <Button Grid.Row="0" Grid.Column="3" Id="IncreasePlayerCountButton">
        <TextBlock Text="+" />
      </Button>
    
      <TextBlock Grid.Row="1" Grid.Column="0" Text="Number of COM" Margin="5" />

      <Button Grid.Row="1" Grid.Column="1" Id="DecreaseComCountButton">
        <TextBlock Text="-" />
      </Button>
      <TextBlock Grid.Row="1" Grid.Column="2" Text="1" Width="30" Id="ComCountText" HorizontalAlignment="Center" />
      <Button Grid.Row="1" Grid.Column="3" Id="IncreaseComCountButton">
        <TextBlock Text="+" />
      </Button>

      <TextBlock Grid.Row="2" Grid.Column="0" Text="Level" Margin="5" />

      <Button  Grid.Row="2" Grid.Column="1" Id="PreviousLevelButton">
        <TextBlock Text="&lt;" />
      </Button>
      <TextBlock Grid.Row="2" Grid.Column="2" Text="x" Width="120" Id="CurrentLevelText" HorizontalAlignment="Center" />
      <Button Grid.Row="2" Grid.Column="3" Id="NextLevelButton">
        <TextBlock Text="&gt;" />
      </Button>

      <TextBlock Grid.Row="3" Grid.Column="0" Text="Level Time" Margin="5" />

      <Button  Grid.Row="3" Grid.Column="1" Id="DecreaseTimeButton">
        <TextBlock Text="&lt;" />
      </Button>
      <TextBlock Grid.Row="3" Grid.Column="2" Text="x" Width="120" Id="CurrentTimeText" HorizontalAlignment="Center" />
      <Button Grid.Row="3" Grid.Column="3" Id="IncreaseTimeButton">
        <TextBlock Text="&gt;" />
      </Button>
    </Grid>

    <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Right">
      <Button Id="StartGameButton" Margin="10,0">
        <TextBlock Text="Start" Margin="10,5"/>
      </Button>
      <Button Id="BackButton" Margin="10,0">
        <TextBlock Text="Back" Margin="10,5"/>
      </Button>
    </StackPanel>
  </StackPanel>
</Frame>